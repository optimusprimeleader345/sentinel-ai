# ===== Basic Configuration =====
PORT=5000
NODE_ENV=production

# ===== Database Configuration =====
MONGO_URI=mongodb://localhost:27017/sentinelai
# For production, use your MongoDB Atlas connection string:
# MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/sentinelai?retryWrites=true&w=majority

# ===== Authentication & Security =====
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRE=7d

# ===== Frontend Integration =====
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# ===== AI & ML Services =====
OPENAI_API_KEY=your-openai-api-key-here
# Optional: Hugging Face API for additional ML models
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# ===== IP Threat Intelligence Scanner Configuration =====
# Get your free AbuseIPDB API key: https://www.abuseipdb.com/api
ABUSE_IPDB_KEY=your-abuseipdb-api-key-here

# Optional: IPQualityScore API (paid service)
IPQUALITYSCORE_KEY=your-ipqualityscore-api-key-here

# ===== Email Security Configuration =====
# For email scanning and analysis
EMAIL_SCANNER_API_KEY=your-email-scanner-api-key-here

# ===== URL Security Configuration =====
# For URL scanning and analysis
URL_SCANNER_API_KEY=your-url-scanner-api-key-here

# ===== Deepfake Detection Configuration =====
# For deepfake analysis
DEEPFAKE_API_KEY=your-deepfake-api-key-here

# ===== Security Headers & CORS =====
# Additional security configurations
HELMET_CSP_DIRECTIVES=default-src 'self'
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== Logging Configuration =====
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# ===== Redis Configuration (Optional) =====
# For caching and session storage
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password-here

# ===== Monitoring & Metrics =====
# For application monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# ===== WebSockets Configuration =====
# For real-time updates
WEBSOCKET_ENABLED=true
WEBSOCKET_PORT=8080

# ===== File Upload Configuration =====
# For secure file handling
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# ===== Compliance & Audit =====
# For compliance tracking
AUDIT_LOG_ENABLED=true
DATA_RETENTION_DAYS=365

# ===== Emergency Response Configuration =====
# For emergency operations
EMERGENCY_MODE=false
EMERGENCY_CONTACT_EMAIL=admin@company.com

# ===== Multi-Tenancy Configuration =====
# For enterprise deployments
ENABLE_MULTI_TENANCY=false
DEFAULT_ORGANIZATION_ID=default-org

# ===== Government & Enterprise Features =====
# For government agencies
ENABLE_GOVERNMENT_FEATURES=false
GOVERNMENT_AGENCY_ID=your-agency-id
NATIONAL_THREAT_INTEL_ENABLED=false