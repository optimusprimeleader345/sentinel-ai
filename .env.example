# Backend Environment Variables
# Copy this file to backend/.env for backend configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration (Optional - works with mock data)
MONGO_URI=mongodb://localhost:27017/sentinelai

# Authentication Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=7d

# AI Service Configuration (Optional - uses mock responses)
OPENAI_API_KEY=your_openai_key_here

# CORS Configuration
FRONTEND_URL=http://localhost:5173
CORS_ORIGIN=http://localhost:5173

# Frontend Environment Variables
# Copy this file to .env for frontend configuration

# API Configuration
VITE_API_URL=http://localhost:5000/api
VITE_APP_TITLE=SentinelAI Dashboard
VITE_APP_VERSION=1.0.0
